@using UserLogin.Models
@model ModelLoader
@{
    Layout = "_Layout"; ViewData["Title"] = "Login";
}

@if (Model.userModel == null)
{
    <div class="text-center">
        <h1 class="display-4">Bienvenido al modulo de autenticacion</h1>
    </div>
    <div>
        <form method="post">
            @if (ViewData["LoginBadPassword"] != null)
            {
                <div class="form-text text-danger">@ViewData["LoginBadPassword"]</div>
            }
            <div class="mb-3">
                <label for="docNumInput" class="form-label">Numero de Documento</label>
                <input type="text" class="form-control" name="docNumInput">
                @if (ViewData["LoginDocNumber"] != null)
                {
                    <div class="form-text text-danger">@ViewData["LoginDocNumber"]</div>
                }
            </div>
            <div class="mb-3">
                <label for="passwordInput" class="form-label">Password</label>
                <input type="password" class="form-control" name="passwordInput">
                @if (ViewData["LoginPasword"] != null)
                {
                    <div class="form-text text-danger">@ViewData["LoginPasword"]</div>
                }
            </div>
            <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
            <a asp-action="Create" class="btn btn-info">Crear Cuenta</a>
        </form>
    </div>
}
@if (Model.userModel != null)
{
    <div class="text-center">
        <h2 class="display-4">Bienvenido/a @Model.userModel.Name</h2>
        <a asp-action="Index" class="btn btn-sm btn-primary">Cerrar Sesion</a>
        <table class="table table-sm table-striped table-bordered m-2">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Tipo de documento</th>
                    <th>Numero de documento</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.userModel.Name</td>
                    <td>@Model.userModel.Lastname</td>
                    <td>@ViewData["docName"]</td>
                    <td>@Model.userModel.DocNumber</td>
                    <td>@Model.userModel.Email</td>
                </tr>
            </tbody>
        </table>
    </div>
}
